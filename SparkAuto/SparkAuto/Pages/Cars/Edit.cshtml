@page
@model SparkAuto.Pages.Cars.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Edit Car Details</h2>

<br />

<form method="post">
    <div class="border background-white">

        @* Hidden fields to pass to put controller 
           UserId to get back to the same page 
           Id to look up the car record *@
        <input hidden asp-for="Car.UserId" />
        <input hidden asp-for="Car.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        @* Form shown to user *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.VIN" class="form-control" />
            </div>
            <span asp-validation-for="Car.VIN" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Make" class="form-control" />
            </div>
            <span asp-validation-for="Car.Make" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Model" class="form-control" />
            </div>
            <span asp-validation-for="Car.Model" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Style" class="form-control" />
            </div>
            <span asp-validation-for="Car.Style" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Year" class="form-control" />
            </div>
            <span asp-validation-for="Car.Year" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Miles"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Miles" class="form-control" />
            </div>
            <span asp-validation-for="Car.Miles" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Color" class="form-control" />
            </div>
            <span asp-validation-for="Car.Color" class="text-danger"></span>
        </div>

        <!-- ***** NEED CUSTOM BUTTONS BECAUSE WE ARE COMMING FROM A USER **** -->
        @* Button to submit or return back to list *@
        <div class="form-group row">
            @* Offset will push over 2 columns and have width of 5 columns after the offset *@
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButtons" />
            </div>
        </div>

    </div>
</form>


@* Auto error checking against the models settings. *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

