@page
@model SparkAuto.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Car Details</h2>
<br />

<form method="post">
    <div class="border background-white">

        @* Hidden fields to pass to post controller method 
            UserId to get back to the same page
            Id to look up the car record *@
        <input hidden asp-for="Car.UserId" />
        <input hidden asp-for="Car.Id" />


        @* Form shown to user *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.VIN" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Make" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Model" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Style" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Year" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Miles"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Miles" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                @* Form control will occupy the full div area *@
                <input asp-for="Car.Color" class="form-control" disabled />
            </div>
        </div>


        <!-- ***** NEED CUSTOM BUTTONS BECAUSE WE ARE COMMING FROM A USER **** -->
        @* Button to delete or return back to cars for a user page *@
        <div class="form-group row">
            @* Offset will push over 2 columns and have width of 5 columns after the offset *@
            <div class="col-5 offset-2">
                <div class="row">
                    @* Our 5 colums is now split into 12 more columns *@
                    <div class="col-6">
                        @* Use HTML post syntax*@
                        <input type="submit" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    @* Value states to go back to the Create index page
                        asp-route-userId is passed as a URL parameter *@
                    <div class="col-6">
                        <a asp-page="Index" asp-route-userId="@Model.Car.UserId"
                           class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>
