@page
@model SparkAuto.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info pt-2 pb-3">Delete Customer</h2>


<div class="row background-white border">

    <div class="col-md-8">

        <form method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Try adding ID to fix saving issue -->
            <input type="hidden" asp-for="ApplicationUser.Id" />

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.Name" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.Email" class="form-control" disabled />
                    </div>
                    <!-- Email is not included maybe because it is disabled
                 Try to use ID and get rid of this line and comment -->
                    <input type="hidden" asp-for="ApplicationUser.Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.PhoneNumber" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.Address" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.City" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.PostalCode" class="form-control" disabled />
                    </div>
                </div>
            </div>

            @* We are using the ID to retrieve the correct User to remove. 
               *** THIS TABLES ID IS A STRING *** *@
            <input type="hidden" asp-for="ApplicationUser.Id" />

            <div class="form-group row">
                @* Offset will push over 2 columns and have width of 5 columns after the offset *@
                <div class="col-5 offset-4">
                    <div class="row">
                        @* Our 5 colums is now split into 12 more columns *@
                        <div class="col-6">
                            @* Use HTML post syntax*@
                            <input type="submit" class="btn btn-danger form-control" value="Delete" />
                        </div>
                        @* Value states to go back to the Create index page *@
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>

        </form>

    </div>  @* column 8 medium*@

</div>  @* end of Row *@

